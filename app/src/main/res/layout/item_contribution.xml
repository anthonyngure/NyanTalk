<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/list_row_padding">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ke.co.toshngure.views.NetworkImage
            android:id="@+id/avatarTV"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:niSrc="@drawable/logo"
            app:niCircled="true"/>

        <TextView
            android:id="@+id/nameTV"
            style="@style/BaseCode.Heading"
            android:text="@string/app_name"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            tools:ignore="RtlHardcoded"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textTV"
        style="@style/BaseCode.Body"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/list_row_padding"
        android:text="@string/about" />

    <ke.co.toshngure.views.ToshTextView
        android:id="@+id/createdAtTV"
        style="@style/BaseCode.Heading"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/ic_access_time_black_16dp"
        android:drawablePadding="@dimen/list_row_padding"
        app:ttvDrawableTint="@color/colorPrimaryDark"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="@string/app_name"
        tools:ignore="RtlHardcoded" />

</LinearLayout>