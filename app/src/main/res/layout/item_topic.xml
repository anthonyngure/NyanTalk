<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/list_row_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="@dimen/list_row_padding">

        <ke.co.toshngure.views.NetworkImage
            android:id="@+id/avatarTV"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:niSrc="@drawable/logo"
            app:niCircled="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            tools:ignore="RtlHardcoded">

            <TextView
                android:id="@+id/nameTV"
                style="@style/BaseCode.Heading"
                android:text="@string/app_name"
                android:layout_marginBottom="0dp"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/forumTV"
                style="@style/BaseCode.Body"
                android:maxLines="2"
                android:ellipsize="end"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/titleTV"
        style="@style/BaseCode.Heading"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginBottom="0dp"
        android:text="@string/about" />

    <TextView
        android:id="@+id/descriptionTV"
        style="@style/BaseCode.Body"
        android:text="@string/about" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_row_padding"
        android:padding="@dimen/list_row_padding">

        <ke.co.toshngure.views.ToshTextView
            android:id="@+id/contributionsCountTV"
            style="@style/BaseCode.Heading"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:drawableLeft="@drawable/ic_forum_black_16dp"
            android:layout_marginRight="@dimen/list_row_padding"
            android:drawablePadding="@dimen/list_row_padding"
            app:ttvDrawableTint="@color/colorPrimaryDark"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAllCaps="true"
            android:text="@string/app_name"
            tools:ignore="RtlHardcoded" />

        <ke.co.toshngure.views.ToshTextView
            android:id="@+id/createdAtTV"
            style="@style/BaseCode.Heading"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:drawableLeft="@drawable/ic_access_time_black_16dp"
            android:drawablePadding="@dimen/list_row_padding"
            app:ttvDrawableTint="@color/colorPrimaryDark"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@string/app_name"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>

</LinearLayout>